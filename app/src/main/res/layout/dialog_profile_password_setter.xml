<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/dialog_profile_setter_pass_old_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="@string/pass_old_title"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/dialog_profile_setter_pass_old_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:maxLength="4"
        android:hint="premiere fois, laissez vide"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_setter_pass_old_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/dialog_profile_setter_pass_new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/dialog_profile_setter_pass_old_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="Nouveau mot de passe"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/dialog_profile_setter_pass_new__edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:maxLength="4"
        android:hint="4 chiffres"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_setter_pass_new_title"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/dialog_profile_setter_pass_new__confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_setter_pass_new__edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Nouveau Confirmer"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/dialog_profile_setter_pass_new_confirm__edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:maxLength="4"
        android:hint="4 chiffres"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_setter_pass_new__confirm_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>