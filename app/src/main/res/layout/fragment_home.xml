<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/app_default_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_menu_white_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:text="Namboo"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <!--<ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/ic_notifications_white_24dp"/>-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/app_default_bar">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/blue_banner"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="210dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/main_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/home_search_frame">
                                    <LinearLayout
                                        android:id="@+id/home_get_research"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:layout_gravity="center_horizontal">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_search_black_24dp"
                                            android:layout_gravity="center_vertical"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:text="Faites une Recherche"
                                            android:textSize="15sp"/>

                                        <!--<SearchView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>-->
                                        <!--<ImageView
                                            android:layout_marginLeft="15dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_search_black_24dp"/>

                                        <EditText
                                            android:layout_width="310dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:hint="Recherche"
                                            android:background="@color/white"/>-->
                                    </LinearLayout>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    android:background="@color/white"
                                    android:layout_marginTop="10dp">
                                    <!--<LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_gravity="center_horizontal"
                                            android:src="@drawable/ic_e_service"
                                            android:scaleType="centerCrop"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="center_horizontal"
                                            android:text="E-Services"/>
                                    </LinearLayout>-->
                                    <ImageView
                                        android:background="@drawable/home_banner_image_background"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/home_banner"
                                        android:scaleType="centerCrop"/>



                                </FrameLayout>

                                <FrameLayout
                                    android:id="@+id/home_make_post"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/home_search_frame_height"
                                    android:background="@drawable/home_person_search_background">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_megaphone_white"
                                            android:layout_gravity="center_vertical"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:text="Poster une annonce"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"/>
                                    </LinearLayout>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/home_categories_list"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </FrameLayout>
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/home_selling_frame"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="15dp"
                                app:layout_constraintTop_toBottomOf="@id/main_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollbars="none">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <FrameLayout
                                            android:id="@+id/home_selling_header_frame"
                                            android:layout_width="@dimen/home_room_item_width"
                                            android:layout_height="@dimen/home_room_item_height"
                                            android:background="@drawable/home_vente_promotion"
                                            android:padding="5dp"
                                            android:paddingLeft="50dp"
                                            android:layout_marginLeft="15dp"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/home_vente_promotion">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Récemment en \nvente"
                                                    android:textColor="@color/white"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"/>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    android:layout_marginTop="105dp">
                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/ic_add_circle_white_24dp"/>
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="5dp"
                                                        android:text="voir tout"
                                                        android:textColor="@color/white"/>
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>
                                        </FrameLayout>

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/home_selling_list"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/home_renting_frame"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="15dp"
                                app:layout_constraintTop_toBottomOf="@id/home_selling_frame"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollbars="none">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                        <FrameLayout
                                            android:id="@+id/home_renting_header_frame"
                                            android:layout_width="@dimen/home_room_item_width"
                                            android:layout_height="@dimen/home_room_item_height"
                                            android:background="@drawable/home_renting_promotion"
                                            android:padding="5dp"
                                            android:paddingLeft="50dp"
                                            android:layout_marginLeft="15dp"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/home_renting_promotion">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Récemment en\nlocations"
                                                    android:textColor="@color/white"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"/>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    android:layout_marginTop="105dp">
                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/ic_add_circle_white_24dp"/>
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="5dp"
                                                        android:text="voir tout"
                                                        android:textColor="@color/white"/>
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>
                                        </FrameLayout>

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/home_renting_list"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </FrameLayout>
                            <FrameLayout
                                android:id="@+id/home_information"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:background="@drawable/home_show_information_background"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="25dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@id/home_renting_frame">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent">
                                        <TextView
                                            android:id="@+id/home_info_app_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Namboo"
                                            android:textSize="35sp"
                                            android:textColor="@color/white"
                                            android:textStyle="bold|italic"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="@string/home_long_information"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"/>
                                    </LinearLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </FrameLayout>
                            <FrameLayout
                                android:id="@+id/home_post_recent_frame"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/home_information"
                                android:layout_width="match_parent"
                                android:layout_marginTop="30dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Chambres"
                                                android:textStyle="bold"
                                                android:layout_marginLeft="15dp"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="20sp"/>
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/colorPrimary">

                                            </FrameLayout>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/see_more_chambre"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:background="@drawable/home_see_more_back"
                                            android:gravity="center_vertical"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="15dp"
                                            android:layout_gravity="center_vertical"
                                            android:padding="5dp"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="voir plus"
                                                android:layout_gravity="center_vertical"/>
                                            <ImageView
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_gravity="center_vertical"
                                                android:src="@drawable/ic_right_arrow_black"/>
                                        </LinearLayout>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="15dp"
                                        android:scrollbars="none"
                                        android:layout_height="wrap_content">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/home_chambre_post_recent_list"
                                            android:layout_marginTop="10dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </HorizontalScrollView>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Maisons ou Villas"
                                                android:textStyle="bold"
                                                android:layout_marginLeft="15dp"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="20sp"/>
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/colorPrimary">

                                            </FrameLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/see_more_maison"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:background="@drawable/home_see_more_back"
                                            android:gravity="center_vertical"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="15dp"
                                            android:layout_gravity="center_vertical"
                                            android:padding="5dp"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="voir plus"
                                                android:layout_gravity="center_vertical"/>
                                            <ImageView
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_gravity="center_vertical"
                                                android:src="@drawable/ic_right_arrow_black"/>
                                        </LinearLayout>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="15dp"
                                        android:scrollbars="none"
                                        android:layout_height="wrap_content">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/home_maison_post_recent_list"
                                            android:layout_marginTop="10dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </HorizontalScrollView>


                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Terrains"
                                                android:textStyle="bold"
                                                android:layout_marginLeft="15dp"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="20sp"/>
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/colorPrimary">

                                            </FrameLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/see_more_terrain"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:background="@drawable/home_see_more_back"
                                            android:gravity="center_vertical"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="15dp"
                                            android:layout_gravity="center_vertical"
                                            android:padding="5dp"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="voir plus"
                                                android:layout_gravity="center_vertical"/>
                                            <ImageView
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_gravity="center_vertical"
                                                android:src="@drawable/ic_right_arrow_black"/>
                                        </LinearLayout>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="15dp"
                                        android:scrollbars="none"
                                        android:layout_height="wrap_content">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/home_terrain_post_recent_list"
                                            android:layout_marginTop="10dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </HorizontalScrollView>
                                </LinearLayout>
                            </FrameLayout>


                            <FrameLayout
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/home_post_recent_frame"
                                android:layout_width="match_parent"
                                android:layout_marginTop="30dp"
                                android:layout_height="150dp">

                            </FrameLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>