<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:padding="10dp"
        android:background="@drawable/default_yellow_border_rounded">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintLeft_toRightOf="parent">
            <ImageView
                android:id="@+id/payment_buy_credit_option_item_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_monetization_on_color_primary_24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/payment_buy_credit_option_item_credit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 crÃ©dits"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/payment_buy_credit_option_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 000 Fcfa"
                    android:textSize="10sp"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>